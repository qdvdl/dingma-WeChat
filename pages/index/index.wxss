/**index.wxss**/
/* 本页面样式 */
/* 搜索区域 */
.Searchh{
  height: 20rpx;
}
.Search{
  width:640rpx;
  height:70rpx;
  background:rgba(247,247,247,1);
  border-radius:35rpx;
  margin: 0 auto;
  display: flex;
  justify-content:space-between;
  line-height: 70rpx;
  padding: 0 20rpx 0 30rpx;
  margin-bottom: 30rpx;

}
.Search .seize{
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.Search .icon{
  font-size: 50rpx;
  position: relative;
  top: 5rpx;
}


/* banner区域 */
.Banner{
  width: 100%;
  height: 400rpx;
  font-size: 0;
}
.Banner image{
  width: 100%;
}

.Bicon{
  justify-content: space-around;
  display: flex;
  width: 100%;
  height:70rpx;
  background:rgba(247,247,247,1);
  text-align: center;
  line-height: 70rpx;
}
.Bicon view{
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
 
}
.Bicon view image{
  width: 24rpx;
  height: 24rpx;
  position: relative;
  top: 3rpx;
}

.text-tab{
  justify-content: space-around;
  display: flex;
  text-align: center;
}
.text-tab1{
  text-align: center;
  padding-top: 43rpx;
}
.text-tab text{
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.text-tab .text{
  /* margin-left:14rpx;  */
  width: 90rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size:36rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(255,255,255,1);
  text-shadow:0px 5rpx 5rpx rgba(12,3,6,0.2);
  border-radius:40px;
  margin-bottom: 20rpx;
  text-align: center;
}
.text-tab .text1{
  background:linear-gradient(0deg,rgba(253,129,77,1) 0%,rgba(253,166,130,1) 100%);
}
.text-tab .text2{
  background:linear-gradient(0deg,rgba(47,191,158,1) 0%,rgba(120,212,193,1) 100%);
}
.text-tab .text3{
  background:linear-gradient(0deg,rgba(191,195,204,1) 0%,rgba(201,206,212,1) 100%);
}
.text-tab2{
  margin-bottom: 40rpx;
}
/* 列表 */
.main{
  position: relative;
}
/* 车型列表 */
.main-list{
  position: relative;
  z-index: 2;
  width: 690rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.main-list .list-item{
  width: 330rpx;
  margin-bottom:60rpx;
}
.main-list .list-item image{
  width: 100%;
  height: 236rpx;
  border-radius:10rpx 10rpx 0px 0px;
  margin-bottom: 30rpx;
}

.list-item .name{
  width: 100%;
  overflow:hidden;
  text-overflow:ellipsis; 
  white-space: nowrap;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(51,51,51,1);
  margin-bottom: 20rpx;
} 
.list-item .model{
  margin-bottom: 20rpx;
  width: 100%;
  overflow:hidden;
  text-overflow:ellipsis; 
  white-space: nowrap;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.list-item .price{
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(255,77,48,1);

}
.list-item .price .s{
  font-size:30rpx;
}
.list-item .price .t{
  line-height: 45rpx;
  font-size:24rpx;
  font-weight: 400;
  float: right;
}

/* 标题 */
.header-title{
  position: relative;
  height: 134rpx;
  z-index: 2;
  line-height: 134rpx;
  padding-left: 33rpx;
}
.header-title .title{
  font-size:36rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(255,255,255,1);
}
.header-title .More{
  position: absolute;
  right: 27rpx;
  top: 38rpx;
  padding: 0 24rpx;
  height:50rpx;
  background:rgba(255,255,255,0.2);
  border-radius:25rpx;
  line-height:50rpx; 
  color: #ffffff;
  text-align: center;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;

}
.header-title .title text{
  margin-left: 32rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(255,255,255,1);
  opacity:0.8;
}
.bg{
   width: 100%;
   height: 238rpx;
   position: absolute;
   left: 0;
   top: 0;
   z-index: 1;
}

.bg image{ 
  width: 100%;
  height: 100%;
  background: #07ADA1;
}
.bg.bg2 image{
 background: #FF8D58;
}

/* 公告 */
.notice-bar-box{
  display: flex;
  background: #F7F7F7;
  height: 100rpx;
  line-height: 100rpx;
  margin-bottom: 36rpx;
  overflow: hidden;
}
.notice-bar-box .icon{
  color: #ff3b50;
  margin-right: 26rpx;
  margin-left: 32rpx;
  font-size: 40rpx;
  font-weight: bold;
}
.notice-bar-box .swiper{
  width: 602rpx;
}
.notice-bar-box .header{
  width: 50rpx;
  height: 50rpx;
  /* overflow: hidden; */
  position: relative;
  top: 10rpx;
  margin-right: 19rpx;
}
.notice-bar-box .header image{
  width: 100%;
  height: 100%;
  border-radius:50%;
}
.imgtext{
  display: flex;
}
.imgtext .text{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
}

/* 导航 */
.navh{
  height: 100rpx;
  /* box-shadow:0px 0px 7px 0px rgba(0, 0, 0, 0.16); */
}
.navtext{
  font-weight: bold;
}

