/* pages/details/details.wxss */
.banner{
  width: 100%;
  height: 426rpx;
}
.banner image{
  width: 100%;
}
.banner-box{
  position: relative;
}
.number-text{
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
  z-index: 9;
  width:103rpx;
  height:52rpx;
  background:rgba(0,0,0,.6);
  border-radius:25px;
  text-align: center;
  line-height: 52rpx;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
}
/* 显示信息 */
.info-text{
  padding:31rpx 30rpx 39rpx 30rpx;
}
.info-text .name{
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:#333333;
  margin-bottom: 30rpx;
}
.info-text .name text{
  margin-right: 30rpx;
}
.info-text .price{
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
  margin-bottom: 30rpx;
}
.info-text .price text{
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(255,77,48,1);
  margin-left: 19rpx;
}
.info-text .des{
  display: flex;
  font-size:22rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
  word-wrap: break-word;
}
.info-text .des view{
  width: 630rpx;
}
.info-text .des text{
  display:inline-block;
  width:36rpx;
  height:36rpx;
  background: #FF4D30;
  color: #ffffff;
  text-align: center;
  line-height: 36rpx;
  border-radius: 50%;
  font-size:24rpx;
  margin-right: 13rpx;
}
.hb{
  height: 20rpx;
  background:rgba(247,247,247,1);
}
/* 详情 */
.title{
  height: 99rpx;
  line-height: 99rpx;
  border-bottom: 1px solid #EEEEEE;
  font-size:36rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(51,51,51,1);
  padding-left: 30rpx;
}
.title text{
  font-size:28rpx;
  color: #333333;
  font-weight: normal;
}
.arrow{
  float: right;
  color: #999999;
  padding-right: 30rpx;
}
/* 详情 */
.content{
  width: 682rpx;
  margin: 0 auto;
  padding:24rpx 0;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height: 40rpx;
}
/* 评价列表 */
.evaluation{
  width: 690rpx;
  margin: 0 auto;
}
.user-info{
  display: flex;
  margin-bottom: 30rpx;
}
.uinfoimg{
  margin-right: 20rpx;
  /* width: 60rpx;
  height: 60rpx; */
  border-radius:50%; 
  padding-top: 15rpx;
}
.uinfoimg image{
  width: 60rpx;
  height:60rpx;
  border-radius:50%; 
}
.uinfo{
position: relative;
width: 100%;
}
.uinfo .name{
  padding-top: 10rpx;
  padding-left: 5rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(51,51,51,1);
  width: 380rpx;
  overflow:hidden;
text-overflow:ellipsis; 
white-space: nowrap;
}
.uinfo .time{
position: absolute;
right: 0;
top: 10rpx;
font-size:24rpx;
font-family:PingFang SC;
font-weight:400;
color:rgba(153,153,153,1);
}
.evaluation-text{
  width: 100%;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height: 40rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  margin-bottom: 18rpx;
}
.imglist{
 display: flex;
flex-wrap: wrap;
padding-bottom: 20rpx;
}
.imglist .img{
  width: 214rpx;
  height: 214rpx;
  overflow: hidden;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.imglist .img:nth-of-type(3n){
  margin-right: 0rpx;
}
.imglist .img image{
  width: 100%;
  height: 100%;
}
/* 回复 */
.reply{
  padding: 29rpx 38rpx 40rpx 30rpx;
  background: #F7F7F7;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:#666666;
  line-height:36rpx;
}
.reply text{
  color: #1A30DC;
}
/* 商品导航 */
.goods-action{
  width:100%;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 2;
  height: 90rpx;
  display: flex;
  background: #F7F7F7;
}
.bottomh{
  height: 90rpx;
}
.goods-icon{
  width: 25%;
  /* height: 90rpx; */
  text-align: center;
  padding-top: 10rpx;
  position: relative;
}
.goods-icon .goods-btn{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.0);
  overflow: hidden;
  z-index: 9;
}
.goods-icon-border::after{
  content:'';
  position: absolute;
  right: 0;
  top: 20rpx;
  height:50rpx;
  width:1px;
  background: #CCCCCC;
  /* background: red; */
  z-index: 2;
}
.goods-icon .text{
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.goods-btn{
  width:50%;
  height:90rpx;
  background:rgba(238,124,53,1);
  text-align: center;
  line-height: 90rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
}

/* 咨询价格弹窗 */
.subbox{
  padding-top: 80rpx;
}
.btn{
  text-align: center;
  padding: 60rpx 0;
}
.success{
  text-align: center;
  padding-top: 108rpx;
}
.success .msg{
  font-size:36rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(51,51,51,1);
  margin-bottom: 34rpx;
}
.success .text{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
  padding-bottom: 108rpx;
}