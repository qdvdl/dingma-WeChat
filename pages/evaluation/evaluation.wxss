/* pages/evaluation/evaluation.wxss */
.title{
  height: 99rpx;
  line-height: 99rpx;
  border-top: 1px solid #EEEEEE;
  border-bottom: 1px solid #EEEEEE;
  font-size:36rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(51,51,51,1);
  padding-left: 30rpx;
}
.title text{
  font-size:28rpx;
  color: #333333;
  font-weight: normal;
}

/* 评价列表 */
.evaluation{
  width: 690rpx;
  margin: 0 auto;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #EEEEEE;
}
.user-info{
  display: flex;
  margin-bottom: 30rpx;

}
.uinfoimg{
  margin-right: 20rpx;
  /* width: 60rpx;
  height: 60rpx; */
  border-radius:50%; 
  padding-top: 16rpx;
}
.uinfoimg image{
  width: 60rpx;
  height:60rpx;
  border-radius:50%; 
}
.uinfo{
position: relative;
width: 100%;
}
.uinfo .name{
  padding-top: 10rpx;
  padding-left: 5rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(51,51,51,1);
}
.uinfo .time{
position: absolute;
right: 0;
top: 10rpx;
font-size:24rpx;
font-family:PingFang SC;
font-weight:400;
color:rgba(153,153,153,1);
}
.evaluation-text{
  width: 100%;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height: 40rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  margin-bottom: 18rpx;
}
.imglist{
 display: flex;
flex-wrap: wrap;
padding-bottom: 20rpx;
}
.imglist .img{
  width: 214rpx;
  height: 214rpx;
  overflow: hidden;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.imglist .img:nth-of-type(3n){
  margin-right: 0rpx;
}
.imglist .img image{
  width: 100%;
  height: 100%;
}
/* 回复 */
.reply{
  padding: 30rpx 30rpx 40rpx 30rpx;
  background: #F7F7F7;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:#666666;
  line-height:36rpx;
  word-wrap: break-word;
  word-break: break-all;
}
.reply text{
  color: #1A30DC;
}
.more-btn{
  padding-top: 40rpx;
}